<Window x:Class="GenerativeArt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GenerativeArt"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="800"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Rectangle x:Name="RctSize" Loaded="Rectangle_Loaded" Visibility="Hidden" />
        <Image x:Name="Art" Grid.Column = "0" Stretch="UniformToFill" />
        <Button x:Name="BtnGenerate" Grid.Column="1" Content="Generate" Height="30" VerticalAlignment="Top" Click="OnGenerate" />
    </Grid>
</Window>
